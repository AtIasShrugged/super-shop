generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int     @id @default(autoincrement())
  ean         String  @unique
  name        String
  description String?
  cost        Int
}

enum Role {
  USER
  ADMIN
}

model User {
  id          Int     @id @default(autoincrement())
  email       String  @unique
  phoneNumber String  @unique
  firstName   String
  lastName    String
  password    String
  role        Role    @default(USER)
  isConfirmed Boolean
}
